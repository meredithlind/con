<div class="title">
  <h1 class="title-name">Welcome to Connect Four</h1>
</div>

<div class="game">
  <%= button_to 'Start Game', action: 'play' %>
  <%= @game.current_player.name %>
  <%= @game.next_player.name %>

  <div class="board">
    <% @game.game_board.board.each do |row| %>
      <div class="row">
        <% row.each do |cell| %>
          <span class="cell">
            <%= cell.value %>
          </span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
